<?xml version="1.0"?>

<param name="robot_description"
  command="xacro --inorder '$(find manipulator)/urdf/manip.xacro'" />

<robot name="my_manipulator" >



<link name="base">
  <visual>
    <origin xyz="0 0 0.05" rpy="0 0 0" />
    <geometry>
      <cylinder radius=".5" length="0.1" />
    </geometry>
    <material name="gray">
      <color rgba=".2 .2 .2 1" />
    </material>
  </visual>

  <collision>
    <origin xyz="0 0 0.05" rpy="0 0 0" />
    <geometry>
      <cylinder radius="0.5" length="0.1" />
    </geometry>
    	<contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
  	</collision>
</link>


<link name="arm1">
  <visual>
    <origin xyz="0 0 0.5" rpy="0 0 0" />
    <geometry>
      <cylinder radius=".05" length="1" />
    </geometry>
    <material name="gray">
      <color rgba=".2 .2 .2 1" />
    </material>
  </visual>

  <collision>
    <origin xyz="0 0 .5" rpy="0 0 0" />
    <geometry>
      <cylinder radius=".05" length="1" />
    </geometry>
      <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
    </collision>
</link>


<joint name="base__arm1" type="fixed">
  <origin xyz="0 0 0.1" />
  <parent link="base"/>
  <child link="arm1"/>
</joint>



</robot>